# Tournament Planner Frontend Configuration for Native Windows
# These environment variables are used by React during build and runtime

# Backend API URL (Go server running locally)
REACT_APP_API_URL=http://localhost:8080/api/v1

# WebSocket URL for real-time updates
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws

# Application settings
REACT_APP_NAME=Tournament Planner
REACT_APP_VERSION=1.0.0

# Feature flags (matching backend settings)
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_NOTIFICATIONS=false
REACT_APP_ENABLE_PAYMENTS=false

# Development settings
REACT_APP_ENVIRONMENT=development

# API timeout settings (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# Date format settings
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_TIME_FORMAT=12h

# Pagination defaults
REACT_APP_DEFAULT_PAGE_SIZE=20

# File upload limits (must match backend)
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx

# Theme settings
REACT_APP_DEFAULT_THEME=light

# Google Analytics (optional, leave empty for local)
REACT_APP_GA_TRACKING_ID=

# Sentry error tracking (optional, leave empty for local)
REACT_APP_SENTRY_DSN=