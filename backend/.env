# Tournament Planner Backend Configuration for Native Windows
# This file contains all the configuration needed to run the backend on Windows

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database Configuration - Windows Native Setup
# MySQL connection (using local Windows MySQL installation)
MYSQL_DSN=tournament_user:tournament_pass_2024@tcp(127.0.0.1:3306)/tournament_planner?parseTime=true&multiStatements=true&charset=utf8mb4

# MongoDB connection (using local Windows MongoDB installation)
MONGO_URI=mongodb://127.0.0.1:27017
MONGO_DATABASE=tournament_planner

# Redis/Memurai connection (using local Windows Memurai installation)
REDIS_ADDR=127.0.0.1:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication Settings
JWT_SECRET=tournament-planner-secret-key-change-in-production-2024
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRY=168h
BCRYPT_COST=10

# External Services (disabled for local development)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENDGRID_API_KEY=

# Frontend URL (React development server)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration (Windows paths)
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=D:\TournamentPlanner\backend\uploads

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_NOTIFICATIONS=false
ENABLE_PAYMENTS=false
MAINTENANCE_MODE=false

# Server Timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# Database Connection Pool Settings
MYSQL_MAX_OPEN_CONNS=25
MYSQL_MAX_IDLE_CONNS=5
MYSQL_CONN_MAX_LIFETIME=5m

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization,X-Request-ID
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20